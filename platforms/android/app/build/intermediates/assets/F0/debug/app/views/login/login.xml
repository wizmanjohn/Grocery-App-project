<Page loaded="loaded">
<TextField hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none"/>
<TextField hint="Password" secure="true" />
<Button text="Sign in" />
<Button text="Sign up for Groceries" />

<stackLayout orientation="vertical">
<Image src="res://logo" stretch="none" horizontalAlignment="center" ></Image>
<TextField id="email" text="{{ email }}" hint="Email Address" keyboardType="email" autocorrect="true" autocapitalizationType="none" />
<TextField secure="true" text="{{ password }}" hint="Password" />
<button text="Sign in" tap="signIn" />
<Button text="Sign up  for Groceries" class="link" tap="register" />
</stackLayout>
</Page>